
Node *deleteNodeRec(Node *head, int pos) {
    if(head == NULL) return head;
    
    if(pos == 0){
        Node *temp = head;
        head = head -> next;
        delete temp;
        return head;  
    }
    Node *ans = deleteNodeRec(head -> next , pos - 1);
    head-> next = ans; 
    return head;
}
